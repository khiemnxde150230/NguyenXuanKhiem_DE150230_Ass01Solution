@using BusinessObject;
@model Member;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: 80%; margin: auto;">
    <h2 style="text-align: center; margin-top: 30px;">eStore Login</h2>
    <p style="font-weight: 500; text-align: center;">Enter your account below</p>
    <p style="text-align: center; color: red; margin-top: 10px;">@ViewBag.Message</p>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row" style="margin-top: 15px;">
            <div class="col-sm-4 text-right">
                <label style="margin-bottom: 0; font-weight: 500; color: black;">Email</label>
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @style = "width: 60%; height: 35px;", @required = "required" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="margin-top: 15px;">
            <div class="col-sm-4 text-right">
                <label style="margin-bottom: 0; font-weight: 500; color: black;">Password</label>
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @style = "width: 60%; height: 35px;", @type = "password", @required = "required" })
            </div>
        </div>

        <div class="form-group row justify-content-center" style="margin-top: 20px;">
            <button class="btn btn-secondary" type="submit" style="border-radius: 5px; padding: 3px 6px; max-width: 150px;">Login</button>
        </div>
    }
</div>



